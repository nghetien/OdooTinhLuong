<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="payroll_teacher_class_action" model="ir.actions.act_window">
            <field name="name">Danh sách lớp học</field>
            <field name="res_model">classroom</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p clas="oe_view_nocontent_create">
                    Tạo mới lớp học ở đây!
                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="view_payroll_teacher_class">
            <field name="name">Danh sách lớp học</field>
            <field name="model">classroom</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree string="Professor">
                    <field name="id_class"/>
                    <field name="number_class"/>
                    <field name="id_subject"/>
                    <field name="id_teacher"/>
                    <field name="quantity_student"/>
                </tree>
            </field>
        </record>


        <menuitem id="payroll_teacher_class" 
                name="Lớp"
                action="payroll_teacher_class_action"
                parent="payroll_teacher_root"
                sequence="10"/>
</odoo>